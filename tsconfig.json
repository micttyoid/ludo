{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "types": [
      "jest",
      "node"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".", // everything should be under
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./", // ground for "paths"
    "skipLibCheck": true,
    "paths": {
      "#interfaces/*": [
        "src/interfaces/*"
      ],
      "#models/*": [
        "src/models/*"
      ],
      "#services/*": [
        "src/services/*"
      ],
      "#types/*": [
        "src/types/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".config/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*" // Move tests to separate config
  ]
}